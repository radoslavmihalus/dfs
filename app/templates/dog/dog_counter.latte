{define #dog_counter}
<div class="panel-body component col-lg-12">
    <div class="list-group">
        <a n:href="dog_championschip_list id=>$dog->id" class="list-group-item">
            <i class="fa fa-trophy"></i>&nbsp;&nbsp;{_ 'Championchips'}<span class="badge">{DataModel::getChampionshipsCount($dog->id)}</span>
        </a>
        <a n:href="dog_show_list id=>$dog->id" class="list-group-item">
            <i class="fa fa-clipboard"></i>&nbsp;&nbsp;{_ 'Show results'}<span class="badge">{DataModel::getShowsCount($dog->id)}</span>
        </a>
        <a n:href="dog_workexam_list id=>$dog->id" class="list-group-item">
            <i class="fa fa-flag"></i>&nbsp;&nbsp;{_ 'Working exams'}<span class="badge">{DataModel::getWorkexamsCount($dog->id)}</span>
        </a>
        <a n:href="dog_health_list id=>$dog->id" class="list-group-item">
            <i class="fa fa-heartbeat"></i>&nbsp;&nbsp;{_ 'Health'}<span class="badge">{DataModel::getHealthCount($dog->id)}</span>
        </a>
        <a n:href="dog_photogallery id=>$dog->id" class="list-group-item">
            <i class="fa fa-camera"></i>&nbsp;&nbsp;{_ 'Photos'}<span class="badge">{DataModel::getPhotosCount($dog->id)}</span>
        </a>
        <a n:href="dog_videogallery id=>$dog->id" class="list-group-item">
            <i class="fa fa-video-camera"></i>&nbsp;&nbsp;{_ 'Videos'}<span class="badge">{DataModel::getVideosCount($dog->id)}</span>
        </a>
        {if ($dog->dog_gender == "Dog")}
        <a n:href="dog_mating_list id=>$dog->id" class="list-group-item">
            <i class="fa fa-venus-mars"></i>&nbsp;&nbsp;{_ 'Matings'}<span class="badge">{DataModel::getMatingsCount($dog->id)}</span>
        </a>
        {/if}
        <a n:href="dog_coowner_list id=>$dog->id" class="list-group-item">
            <i class="glyphicons glyphicons-user"></i>&nbsp;&nbsp;{_ 'Coowners'}<span class="badge">{DataModel::getCoownersCount($dog->id)}</span>
        </a>
    </div>
</div>
{/define}
