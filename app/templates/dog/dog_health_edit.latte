{block content}
{includeblock '../components/textbox_control.latte'}
{includeblock '../components/image_UploadPicture_control.latte'}
{includeblock '../components/dropdown_DatePicker_control.latte'}
<div class="panel-default col-md-8" style="font-size: 12px;min-width: 244px">
    <div class="panel-body component" style="background-color: white;margin-bottom: 10px;">
        {form formEditHealth}
            <h2 class="text-center text-uppercase"><i class="fa fa-heartbeat"></i>&nbsp;&nbsp;{_ 'Edit health record'}</h2>
            <hr>
            <input type="hidden" n:name=dog_id />
            {include dropdown_DatePicker_control, _form => $_form, description => "Date of the health record", placeholder => "Please select", id => "ddlDate", name => "ddlDate", tooltip => "Enter the date the health record was issued"}
            {include textbox_control, _form => $_form, description => "Description of the health record", placeholder => "Hip Dysplasia", id => "txtHealthName", name => "txtHealthName", tooltip => "Enter a description or type of health record (e.g. HD, ED)"}
            {include image_UploadPicture_control, _form => $_form, description => "Picture", placeholder => "Select picture", id => "txtHealthPicture", name => "txtHealthPicture", tooltip => "Record the picture (e.g. health report â€“ image in jpg or jpeg format). This field is optional"}
            <button type="submit" n:name=btnSubmit class="btn btn-danger btn-xl pull-right">{_ 'Edit'}</button>
            <button type="submit" n:name=btnCancel class="btn btn-default btn-xl pull-right" style="margin-right: 10px;">{_ 'Cancel'}</button>
        {/form}
    </div>
</div>  
{/block}